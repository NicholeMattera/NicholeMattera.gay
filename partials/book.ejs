<li class="book">
    <div class="book-cover">
        <img src="<%- coverImage %>" height="100px" alt="" />
    </div>
    <div class="book-details">
        <hgroup>
            <h3><%- name %></h3>
            <p>By <%- author %></p>
        </hgroup>
        <div class="filler"></div>
        <ul class="book-tags">
            <% tags.forEach(function(tag){ %>
                <% if (tag === 'loved') { %>
            <li>💜 Loved!</li>
                <% } %>
                <% if (tag === 'liked') { %>
            <li>👍🏻 Enjoyed</li>
                <% } %>
                <% if (tag === 'cute') { %>
            <li>😊 Very cute</li>
                <% } %>
                <% if (tag === 'lgbt') { %>
            <li>🏳️‍🌈 LGBTQIA+</li>
                <% } %>
                <% if (tag === 'reread') { %>
            <li>👀 Rereading</li>
                <% } %>
                <% if (tag === 'library') { %>
            <li>🏛️ Borrowed</li>
                <% } %>
            <% }); %>
        </ul>
    </div>
</li>
